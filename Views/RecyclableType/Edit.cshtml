@model SDS_Technical_Exam.Models.RecyclableType

@{
    ViewBag.Title = "Create Recyclable Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Recyclable Type</h2>

@using (Html.BeginForm("CreateEditForm", "RecyclableType", FormMethod.Post))
{
        @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Type)
        @Html.TextBoxFor(m => m.Type, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rate)
        @Html.TextBoxFor(m => m.Rate, new { @class = "form-control", type = "number", step = "0.01", min = "0", required = "required" })
        @Html.ValidationMessageFor(m => m.Rate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MinKg)
        @Html.TextBoxFor(m => m.MinKg, new { @class = "form-control", type = "number", step = "0.01", min = "0", required = "required" })
        @Html.ValidationMessageFor(m => m.MinKg, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxKg)
        @Html.TextBoxFor(m => m.MaxKg, new { @class = "form-control", type = "number", step = "0.01", min = "0", required = "required" })
        @Html.ValidationMessageFor(m => m.MaxKg, "", new { @class = "text-danger" })
    </div>

    <div class="mt-3 form-group">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
        <a href="@Url.Action("List", "RecyclableType")" class="btn btn-danger">Cancel</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
