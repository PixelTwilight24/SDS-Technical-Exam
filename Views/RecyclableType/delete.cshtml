@model SDS_Technical_Exam.Models.RecyclableType

@{
    ViewBag.Title = "Delete Recyclable Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Recyclable Type</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this item?
</div>
<div>
    <strong>Type:</strong> @Model.Type <br />
    <strong>Rate:</strong> @Model.Rate <br />
    <strong>Minimum Kg:</strong> @Model.MinKg <br />
    <strong>Maximum Kg:</strong> @Model.MaxKg <br />
</div>

<div class="mt-3">
    <form action="@Url.Action("DeletePost", "RecyclableType", new { id = Model.Id })" method="post">
        <button type="submit" class="btn btn-success">Delete</button>
        <a href="@Url.Action("List", "RecyclableType")" class="btn btn-danger">Cancel</a>
    </form>
</div>
